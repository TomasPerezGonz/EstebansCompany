<div class="container mt-5">
  <h1 class="text-center">Lista de Usuarios</h1>

  <% if current_user.admin? %>
    <div class="text-center mb-4">
      <%= link_to 'Crear Nuevo Usuario', new_user_path, class: 'btn btn-primary' %>
    </div>
  <% end %>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Foto</th>
        <th>Email</th>
        <th>Admin</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td>
            <% if user.photo.attached? %>
              <%= image_tag url_for(user.photo), alt: "Foto de perfil de #{user.email}", width: 50, class: 'img-thumbnail' %>
            <% else %>
              <span class="text-muted">Sin foto</span>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <td><%= user.admin? ? 'Sí' : 'No' %></td>
          <td>
            <%= link_to 'Editar', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
            <%= link_to 'Eliminar', user_registration_path(user), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>





