<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <h1 class="text-right">Postulaciones realizadas</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nombre del Usuario</th>
            <th>Foto</th>
            <th>Nombre de la Postulación</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @admin_job_applications.each do |application| %>
            <tr>
              <td><%= application.user.name %></td>
              <td>
                <% if application.user.photo.attached? %>
                  <%= image_tag url_for(application.user.photo), alt: "Foto de perfil de #{application.user.email}", width: 30, class: 'rounded-circle' %>
                <% end %>
              </td>
              <td><%= application.job_offer.title %></td>
              <td>
                <% unless application.read? %>
                  <%= button_to 'Marcar como leída', mark_as_read_job_application_path(application), method: :post, class: 'btn btn-primary' %>
                <% else %>
                  <span class="badge badge-success">Leída</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


