<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-3">Ofertas de Trabajo</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if current_user.admin? %>
        <%= link_to 'Nueva Oferta Laboral', new_job_offer_path, class: 'btn btn-primary mb-3' %>
      <% end %>

      <% if @job_offers.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>Título</th>
              <th>Descripción</th>
              <th>Salario</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @job_offers.each do |job_offer| %>
              <tr>
                <td><%= job_offer.title %></td>
                <td><%= job_offer.description %></td>
                <td><%= job_offer.salary %></td>
                <td><%= link_to 'Mostrar', job_offer, class: 'btn btn-info' %></td>
                <% if current_user.admin? %>
                  <td><%= link_to 'Editar', edit_job_offer_path(job_offer), class: 'btn btn-warning' %></td>
                  <td><%= link_to 'Eliminar', job_offer, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No hay ofertas de trabajo disponibles en este momento.</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= link_to 'Atrás', root_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>


