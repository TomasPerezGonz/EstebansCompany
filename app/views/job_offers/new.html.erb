<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <h1 class="text-right">Editar Oferta Laboral</h1>

      <% if @job_offer.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@job_offer.errors.count, "error") %> prohibió que esta oferta de trabajo se guardara:</h4>
          <ul>
            <% @job_offer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @job_offer, html: { class: 'form-horizontal' } do |f| %>
        <div class="form-group">
          <%= f.label :title, "Título", class: 'control-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Descripción", class: 'control-label' %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :requirements, "Requisitos", class: 'control-label' %>
          <%= f.text_area :requirements, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :salary, "Salario", class: 'control-label' %>
          <%= f.number_field :salary, class: 'form-control' %>
        </div>

        <% if current_user.admin? %>
          <div class="form-group">
            <%= f.submit "Crear Nueva Oferta Laboral", class: 'btn btn-primary' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>




